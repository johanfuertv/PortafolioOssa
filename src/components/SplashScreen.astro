<head>
	<link rel='preload' as='image' href='/assets/gif/loading-laptop.gif' />
</head>
<div
	id='splash-screen'
	class='fixed inset-0 z-[9999] flex items-center justify-center bg-white dark:bg-zinc-900 transition-opacity duration-500'>
	<div class='text-center'>
		<img
			src='/assets/gif/loading-laptop.gif'
			alt='Loading...'
			class='mx-auto mb-8 object-contain w-[280px] h-[280px] sm:w-[320px] sm:h-[320px] md:w-[380px] md:h-[380px] lg:w-[450px] lg:h-[450px] xl:w-[500px] xl:h-[500px]'
			width='500'
			height='500'
		/>
		<div class='text-xl sm:text-2xl md:text-3xl font-bold text-zinc-800 dark:text-zinc-100 flex items-center justify-center'>
			<span>Loading</span>
			<span id='loading-dots' class='inline-block w-6 text-left'>.</span>
		</div>
	</div>
</div>
<script is:inline>
	// Start the dot animation immediately and keep it running
	const dots = document.getElementById('loading-dots');
	let count = 1;

	// Start dot animation right away
	const dotInterval = setInterval(() => {
		count = count < 3 ? count + 1 : 1;
		if (dots) dots.textContent = '.'.repeat(count);
	}, 400); // Smooth dot animation timing

	// Handle splash screen removal when page loads
	window.addEventListener('load', function () {
		const splash = document.getElementById('splash-screen');
		if (splash) {
			// Keep dot animation running until splash screen is fully removed
			setTimeout(() => {
				splash.style.opacity = '0';
				setTimeout(() => {
					splash.remove();
					clearInterval(dotInterval); // Only clear when splash is completely gone
				}, 500);
			}, 200); // Small delay to let user see the loading animation
		}
	});
</script>
